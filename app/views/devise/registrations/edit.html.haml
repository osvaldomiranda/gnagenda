.row
  .col-md-12.text-center.logo-margin
    = image_tag("logo-web-grupo-natural.png")
    %br
    %br
  .col-md-3 
  .col-md-6
    .login-panel.panel.panel-default
      .panel-heading
        %h3.panel-title Cambiar ContraseÃ±a
      .panel-body
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
          = f.error_notification
          .form-inputs
            .row
              .col-sm-3
                %p Nueva Password         
              .col-sm-6
                = f.input :password, required: true, autocomplete: false,label: false, input_html: {:size => 40}
          .form-inputs
            .row
              .col-sm-3
                %p Repetir Nueva Password         
              .col-sm-6
                = f.input :password_confirmation, required: true, label: false, input_html: {:size => 40}
          .form-inputs
            .row
              .col-sm-3
                %p Password Actual         
              .col-sm-6      
                = f.input :current_password,  required: true, label: false, input_html: {:size => 40}
          %br
          %br  
          .form-actions
            = f.button :submit, "Cambiar" , :class => "btn btn-lg btn-primary btn-block"
          %br
          %br  


