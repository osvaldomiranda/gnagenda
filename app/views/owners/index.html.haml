.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
      .panel-body
        %h2 Propietarios
        .row
          .col-md-12 
            %table.table.table-striped
              %thead
                %tr
                  %th Propietario
                  %th Rut
                  %th Direccion
                  %th Email
                  %th
                  %th
                  %th

              %tbody
                - @owners.each do |owner|
                  %tr
                    %td= owner.nombre_propietario
                    %td= owner.rut_propietario
                    %td= owner.dir_propietario
                    %td= owner.email
                    %td= link_to 'Mostrar', owner_path(owner)
                    %td= link_to 'Editar', edit_owner_path(owner)
                    %td= link_to 'Eliminar', owner_path(owner), :method => :delete, :data => { :confirm => 'Esta Seguro?' }

            %br

            = link_to 'Nuevo Propietario', new_owner_path,:class => "btn btn-warning"

            = link_to "Volver",'/',:class => "btn btn-warning"


 