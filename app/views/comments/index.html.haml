%br
%br
.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
      .panel-body
        %h2 Comentarios
        .row
          .col-md-12 
            %table.table.table-striped
              %thead
                %tr
                  %th Fecha
                  %th Comentario
                  %th
                  %th
                  %th

              %tbody
                - @comments.each do |comment|
                  %tr
                    %td= comment.created_at.strftime("%d/%m/%Y")
                    %td= comment.coment
                    %td= link_to 'Mostrar', comment_path(comment, center_id: @center_id)
                    %td= link_to 'Editar', edit_comment_path(comment, center_id: @center_id)
                    %td= link_to 'Eliminar', comment_path(comment, center_id: @center_id), :method => :delete, :data => { :confirm => 'Esta Seguro?' }

            %br

            = link_to 'Nuevo Comentario', new_comment_path(center_id: @center_id),:class => "btn btn-warning"
            = link_to "Volver",'/',:class => "btn btn-warning"
