.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Kines
      .panel-body
        %h1 Kines

        %table.table.table-striped
          %thead
            %tr
              %th Id centro
              %th Nombre
              %th Hh mensuales
              %th
              %th
              %th

          %tbody
            - @kinesiologists.each do |kinesiologist|
              %tr
                %td= kinesiologist.id_centro
                %td= kinesiologist.nombre
                %td= kinesiologist.hh_mensuales
                %td= link_to 'Show', kinesiologist
                %td= link_to 'Edit', edit_kinesiologist_path(kinesiologist)
                %td= link_to 'Destroy', kinesiologist, :method => :delete, :data => { :confirm => 'Are you sure?' }

        %br

        = link_to 'New Kinesiologist', new_kinesiologist_path
