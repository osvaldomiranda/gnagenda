  .col-md-12
    .panel.panel-default
      .panel-heading
      .panel-body
        .row
          .col-md-12
            = simple_form_for(@kinesiologist) do |f|
              = f.error_notification

              .form-inputs
                = f.input :id_centro, collection: OwnerProp.for_select(current_user.id), :input_html => {:style=> 'width: 180px'}
