%h1 Listing events

%table
  %thead
    %tr
      %th Title
      %th Start
      %th End
      %th
      %th
      %th

  %tbody
    - @events.each do |event|
      %tr
        %td= event.title
        %td= event.start
        %td= event.end
        %td= link_to 'Show', event
        %td= link_to 'Edit', edit_event_path(event)
        %td= link_to 'Destroy', event, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Event', new_event_path

.container{:role => "main"}
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Agenda Visitas
      .panel-body
        #calendar




:javascript
  $('#calendar').fullCalendar({
    events: #{@events.to_json.html_safe},
  
    })
